generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Users {
  id                   Int         @id @default(autoincrement())
  email                String
  name                 String
  password             String
  passwordResetToken   String?
  passwordResetExpires DateTime?
  contentAI            ContentAI[]
  store                Store[]
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @default(now())

  @@map("users")
}

model ContentAI {
  id          Int      @id @default(autoincrement())
  headline    String
  description String
  cta         String
  hashtags    String
  platform    String
  userId      Int
  user        Users    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contentAI")
}

model Store {
  id          Int       @id @default(autoincrement())
  name        String
  email       String
  number      String
  description String
  typeMarket  String
  userId      Int
  user        Users     @relation(fields: [userId], references: [id])
  products    Products[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  @@map("store")
}

model Products {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int            @default(0)
  storeId     Int
  store       Store          @relation(fields: [storeId], references: [id])
  images      ProductImages[]
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@map("products")
}

model ProductImages {
  id        Int       @id @default(autoincrement())
  productId Int
  url       String
  product   Products  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("productImages")
}
