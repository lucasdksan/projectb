generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Users {
  id                   Int       @id @default(autoincrement())
  email                String
  name                 String
  password             String
  passwordResetToken   String?
  passwordResetExpires DateTime?
  store                Store?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @default(now())

  @@map("users")
}

model Store {
  id              Int              @id @default(autoincrement())
  name            String
  email           String
  number          String
  userId          Int              @unique
  user            Users            @relation(fields: [userId], references: [id])
  products        Products[]
  contentAI       ContentAI[]
  instagramConfig InstagramConfig?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @default(now())

  @@map("store")
}

model Products {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  price       Int
  stock       Int          @default(0)
  isActive    Boolean      @default(true)
  category    String
  storeId     Int
  store       Store        @relation(fields: [storeId], references: [id])
  attributes  Attributes[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("products")
}

model Attributes {
  id        Int      @id @default(autoincrement())
  value     String
  kindof    String
  products  Products @relation(fields: [productId], references: [id])
  productId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("attributes")
}

model ContentAI {
  id          Int      @id @default(autoincrement())
  headline    String
  description String
  cta         String
  hashtags    String
  platform    String
  storeId     Int
  store       Store    @relation(fields: [storeId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contentAI")
}

model InstagramConfig {
  id              Int      @id @default(autoincrement())
  token           String
  userInstagramId String
  storeId         Int      @unique
  store           Store    @relation(fields: [storeId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("instagramConfig")
}
